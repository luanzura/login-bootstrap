<%- include('parts/header.ejs') %>

<body>
    <div class="row d-flex justify-content-center align-items-center" style="height: 100vh; width: 100%; background-color: #212529;">
        <div class="col-3 border border-secondary border-1 rounded p-4 shadow-lg" style="background-color: #2B3035;">
            <form action="/register" method="POST">
                <div class="row g-2">
                    <div class="col-6">
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-person-vcard"></i></span>
                            <input type="text" class="form-control" name="first_name" placeholder="primeiro nome" aria-label="Nome" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <input type="text" class="form-control" name="last_name" placeholder="segundo nome" aria-label="Nome" aria-describedby="basic-addon2">
                        </div>
                    </div>
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon3"><i class="bi bi-person"></i></span>
                            <input type="email" class="form-control" placeholder="nome@email.com" name="email" aria-label="Email" aria-describedby="basic-addon3">
                        </div>
                        <div class="input-group">
                            <span class="input-group-text" id="basic-addon4"><i class="bi bi-key"></i></span>
                            <input type="password" class="form-control" name="password" placeholder="senha" aria-label="Senha" aria-describedby="basic-addon4">
                        </div>
                    <div class="col text-center pb-3"><button class="btn btn-primary mt-4" type="submit" style="width: 150px;">Register</button></div>   
                </div>    
            </form>
        </div>
    </div>
</body>
